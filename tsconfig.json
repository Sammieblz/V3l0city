{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", 
    "strict": true,
    "allowSyntheticDefaultImports": true, // Allow importing default exports
    "moduleResolution": "node",          
    "esModuleInterop": true,              
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}